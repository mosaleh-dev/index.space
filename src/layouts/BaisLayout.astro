---
const { title, description } = Astro.props;

const site = process.env.SITE || "http://localhost:8080";
const canonicalURL = new URL(Astro.url.pathname, site);
const siteName = "Index Coworking Space";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />

    <title>{title} | Index Coworking Space</title>
    <meta name="title" content={`${title} | Index Coworking Space`} />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />

    <meta
      name="keywords"
      content="coworking space, mansoura coworking, october coworking, shared office space, workspace mansoura, workspace october, business center, meeting rooms, private offices, index workspace"
    />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Index Coworking Space`} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta
      property="twitter:title"
      content={`${title} | Index Coworking Space`}
    />
    <meta property="twitter:description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Index Coworking Space",
        "description": "High-end coworking space in Mansoura and October offering comfortable workspaces, meeting rooms, and premium amenities for professionals and businesses.",
        "url": "https://indexworkspace.com",
        "telephone": "+20502366881",
        "sameAs": [
          "https://www.facebook.com/Indexcoworkingspace/",
          "https://www.instagram.com/indexcoworkingspace/",
          "https://twitter.com/indexworkspace"
        ],
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "opens": "00:00",
          "closes": "23:59",

          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ]
        }
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  img,
  svg {
    max-width: 100%;
    display: block;
  }

  :root {
    --primary: 198 51% 20%;
    --accent: 29 87% 64%;
    --gray: 246 15% 87%;
    --of-white: 0 0 97%;
  }
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Figtree", sans-serif;
    font-weight: 400;
    line-height: 1.55;
    max-width: 2000px;
    background-color: hsl(var(--primary));
    color: hsl(var(--secondary));
    padding-inline: 2rem;
    padding-block: 0;
  }

  .wrapper {
    overflow: hidden;
    display: grid;
    grid-template-rows: auto 1fr auto;
    min-height: 100vh;
  }

  main {
    display: grid;
    gap: var(--size-fluid-6);
    padding: var(--size-fluid-5) var(--size-fluid-2);
  }
  .container {
    width: 100%;
    max-width: 1500px;
    margin: auto;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
