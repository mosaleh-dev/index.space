---
import { Picture } from "astro:assets";
//import like this because i have not figured out how to dynamic import with lqip with vite
import img1 from "../assets/HeroImages/1.png";
import img1Lqip from "../assets/HeroImages/1.png?lqip";
import img2 from "../assets/HeroImages/2.jpg";
import img2Lqip from "../assets/HeroImages/2.jpg?lqip";
import img3 from "../assets/HeroImages/3.jpg";
import img3Lqip from "../assets/HeroImages/3.jpg?lqip";
import img4 from "../assets/HeroImages/4.jpeg";
import img4Lqip from "../assets/HeroImages/4.jpeg?lqip";
---

<section id="home" class="carousel" aria-label="Image Gallery">
  <h1 class="sr-only">Welcome to Index Coworking Space</h1>
  <div class="carousel-container" role="region" aria-roledescription="carousel" aria-label="Workspace Gallery">
    <ul>
      <li id="image-1" role="tabpanel" aria-label="1 of 4">
        <Picture
          formats={["avif", "webp"]}
          src={img1}
          loading="eager"
          alt="Modern reception area at Index October branch with sleek design and welcoming atmosphere"
          style={{
            backgroundImage: `url("${img1Lqip.lqip}")`,
            backgroundSize: "cover",
          }}
        />
      </li>
      <li id="image-2" role="tabpanel" aria-label="2 of 4">
        <Picture
          formats={["avif", "webp"]}
          src={img2}
          alt="Spacious shared workspace area with ergonomic furniture and natural lighting"
          style={{
            backgroundImage: `url("${img2Lqip.lqip}")`,
            backgroundSize: "cover",
          }}
        />
      </li>
      <li id="image-3" role="tabpanel" aria-label="3 of 4">
        <Picture
          formats={["avif", "webp"]}
          src={img3}
          alt="Collaborative workspace setup with modern amenities and comfortable seating"
          style={{
            backgroundImage: `url("${img3Lqip.lqip}")`,
            backgroundSize: "cover",
          }}
        />
      </li>
      <li id="image-4" role="tabpanel" aria-label="4 of 4">
        <Picture
          formats={["avif", "webp"]}
          src={img4}
          alt="Professional meeting area with contemporary design and tech-ready facilities"
          style={{
            backgroundImage: `url("${img4Lqip.lqip}")`,
            backgroundSize: "cover",
          }}
        />
      </li>
    </ul>
    <div class="slider-nav" role="tablist" aria-label="Gallery Navigation">
      <a href="#image-1" role="tab" aria-controls="image-1" aria-label="View first image" aria-selected="true"></a>
      <a href="#image-2" role="tab" aria-controls="image-2" aria-label="View second image" aria-selected="false"></a>
      <a href="#image-3" role="tab" aria-controls="image-3" aria-label="View third image" aria-selected="false"></a>
      <a href="#image-4" role="tab" aria-controls="image-4" aria-label="View fourth image" aria-selected="false"></a>
    </div>
  </div>
</section>

<script></script>

<style>
  section {
    position: relative;
    margin-inline: -2rem;
  }
  ul {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    box-shadow: 0 1.5rem 3rem -0.75rem hsla(0, 0%, 0%, 0.25);
    -ms-overflow-style: none; /* Hide scrollbar IE and Edge */
    scrollbar-width: none; /* Hide scrollbar Firefox */
    max-height: 100vh;
  }
  li {
    list-style: none;
    flex: 1 0 100%;
    scroll-snap-align: start;
  }
  picture,
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .slider-nav {
    display: flex;
    column-gap: 0.5rem;
    position: absolute;
    bottom: 0.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .slider-nav a {
    position: relative;
    width: 2.5rem;
    height: 0.3rem;
    border-radius: 24px;
    background-color: #fff;
    opacity: 0.75;
    transition: opacity ease 250ms;
  }

  /* for increasing clicable area  */
  .slider-nav a:before {
    content: "";
    position: absolute;
    width: 2.5rem;
    height: 3rem;
    top: -250%;
    cursor: pointer;
  }

  .slider-nav a:hover {
    opacity: 1;
    background-color: hsl(var(--accent));
  }
  .slider-nav a:active {
    opacity: 1;
    transform: scale(1.2);
  }
</style>
