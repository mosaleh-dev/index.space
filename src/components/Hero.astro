---
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../assets/HeroImages/*.{jpeg,jpg,png,gif}",
);
---

<section id="home" class="carousel" aria-labelledby="carouselheading">
  <!-- TODO:add heading for sr and alt text -->
  <!-- TODO: consider calcluting len while doing map to iterate once:-->
  <!-- TODO:handel if ther is no images -->
  <ul>
    {
      Object.values(images).map((image, idx) => (
        <li id={"slide-" + (idx + 1)}>
          <Image
            src={image()}
            alt="3D rendering of an imaginary orange planet in space"
          />
        </li>
      ))
    }
  </ul>
  <div class="slider-nav">
    {
      Object.values(images).map((image, idx) => (
        <a href={"#slide-" + (idx + 1)} />
      ))
    }
  </div>
</section>
<script></script>

<style>
  section {
    position: relative;
    margin-inline: -2rem;
  }
  ul {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    box-shadow: 0 1.5rem 3rem -0.75rem hsla(0, 0%, 0%, 0.25);
    border-radius: 0.5rem;
    -ms-overflow-style: none; /* Hide scrollbar IE and Edge */
    scrollbar-width: none; /* Hide scrollbar Firefox */
    max-height: 100vh;
  }
  li {
    list-style: none;
    flex: 1 0 100%;
    scroll-snap-align: start;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .slider-nav {
    display: flex;
    column-gap: 0.5rem;
    position: absolute;
    bottom: 0.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .slider-nav a {
    position: relative;
    width: 2.5rem;
    height: 0.3rem;
    border-radius: 24px;
    background-color: #fff;
    opacity: 0.75;
    transition: opacity ease 250ms;
  }

  /* for increasing clicable area  */
  .slider-nav a:before {
    content: "";
    position: absolute;
    width: 2.5rem;
    height: 3rem;
    top: -250%;
    cursor: pointer;
  }

  .slider-nav a:hover {
    opacity: 1;
    background-color: hsl(var(--accent));
  }
  .slider-nav a:active {
    opacity: 1;
    transform: scale(1.2);
  }
</style>
