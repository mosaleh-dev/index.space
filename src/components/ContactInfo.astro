---
import { Icon } from "astro-icon/components";
import { Tabs } from "astro-tabs";
import { Image } from "astro:assets";
import data from "../../content/global/index.json";
const contactInfo = data.contactInfo;
---

<Tabs class="contact_tabs">
  <Fragment slot="tab-1">October</Fragment>
  <Fragment slot="tab-2">Mansoura</Fragment>

  <Fragment slot="panel-1">
    <dl>
      <dt>
        <Icon name={"material-symbols:phone-android"} />Phone:
      </dt>
      <dd>
        <a href={`tel:+0${contactInfo.october_phone}`}
          >0{contactInfo.october_phone}</a
        >
      </dd>
      <dt>
        <Icon name={"mdi:whatsapp"} />whatsapp:
      </dt>
      <dd>
        <a href={`https://wa.me/20${contactInfo.october_wa}`}
          >0{contactInfo.october_wa}</a
        >
      </dd>
      <dt>
        <Icon name={"material-symbols:mail-rounded"} />Email:
      </dt>
      <dd>
        <a href={`mailto:${contactInfo.october_email}`}
          >{contactInfo.october_email}</a
        >
      </dd>
    </dl>
    <a href="https://maps.app.goo.gl/6CQAyZ8zthmeqSVV7">
      <Image
        src={import("../assets/octobermap.png")}
        alt={"styled image for October location on the map"}
      /></a
    >
  </Fragment>

  <Fragment slot="panel-2">
    <dl>
      <dt>
        <Icon name={"material-symbols:phone-android"} />Phone:
      </dt>
      <dd>
        <a href={`tel:+0${contactInfo.mansoura_phone}`}
          >0{contactInfo.mansoura_phone}</a
        >
      </dd>
      <dt>
        <Icon name={"mdi:whatsapp"} />whatsapp:
      </dt>
      <dd>
        <a href={`https://wa.me/20${contactInfo.mansoura_wa}`}
          >0{contactInfo.mansoura_wa}</a
        >
      </dd>
      <dt>
        <Icon name={"material-symbols:mail-rounded"} />Email:
      </dt>
      <dd>
        <a href={`mailto:${contactInfo.mansoura_email}`}
          >{contactInfo.mansoura_email}</a
        >
      </dd>
    </dl>
    <a href="https://maps.app.goo.gl/NyUDZR2Jrs2jwY7Y9">
      <Image
        src={import("../assets/mansuramap.png")}
        alt={"styled image for Mansoura location on the map"}
      /></a
    >
  </Fragment>
</Tabs>
<style>
  img {
    padding: 0.5rem;
    width: 100%;
    height: auto;
    border-radius: 24px;
    margin-block-end: 20px;
  }
  dt {
    display: flex;
    gap: 0.5rem;
    color: white;
    align-items: center;
    position: relative;
  }
  ul {
    list-style: none;
  }
  a {
    color: hsl(var(--accent));
  }
</style>

<style is:global>
  .tab {
    color: hsl(var(--accent) / 70%);
  }
  .tabs nav {
    gap: 1rem;
  }

  .tab-selector:checked ~ .tab {
    color: hsl(var(--accent));
  }

  .panel {
    border-block-start: 1px solid hsl(var(--accent) / 70%);
    padding-block-start: 0.5rem;
  }
</style>
