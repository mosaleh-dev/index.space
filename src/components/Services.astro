---
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../assets/Services/*.{jpeg,jpg,png,gif}",
);
const services = [
  {
    name: "Shared area",
    image: "/shared.jpg",
    alt: "Spacious shared workspace area with modern furniture and collaborative environment",
    description: "Open-plan workspace perfect for individuals and small teams, featuring high-speed internet and ergonomic furniture",
    priceRange: "50 EGP/day"
  },
  {
    name: "Cabin",
    image: "/cabin.jpg",
    alt: "Private cabin workspace designed for focused work and small meetings",
    description: "Private enclosed workspace ideal for 2 people, offering privacy and quiet environment",
    priceRange: "50 EGP/hour"
  },
  {
    name: "Meeting room",
    image: "/room.jpg",
    alt: "Professional meeting room equipped with modern presentation facilities",
    description: "Fully equipped meeting space with projector and whiteboard, perfect for team meetings and presentations",
    priceRange: "50 EGP/hour"
  },
];
---

<section id="services">
  <h2>OUR Services</h2>
  <ul>
    {
      services.map((service) => (
        <li class="benefit">
          <Image
            src={images["../assets/Services" + service.image]()}
            alt={service.alt}
          />
          <h3>{service.name}</h3>
        </li>
      ))
    }
  </ul>
</section>
<style>
  section {
    background: white;
    margin-inline: -2rem;
    padding: 2rem;
  }
  h2 {
    text-align: center;
    color: hsl(var(--accent));
  }
  h3 {
    color: white;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  ul {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: baseline;
  }
  li {
    position: relative;
    flex: 1;
    flex-basis: 300px;
    margin-block: 1rem;
    list-style: none;
    width: max(28vw, 100%);
    height: 200px;
  }
  img {
    border-radius: 24px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.8);
  }
</style>
