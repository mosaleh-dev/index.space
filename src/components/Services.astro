---
import { Picture } from "astro:assets";
import sharedImg from "../assets/Services/shared.jpeg";
import sharedImgLqip from "../assets/Services/shared.jpeg?lqip";
import cabinImg from "../assets/Services/cabin.jpg";
import cabinImgLqip from "../assets/Services/cabin.jpg?lqip";
import roomImg from "../assets/Services/room.jpg";
import roomImgLqip from "../assets/Services/room.jpg?lqip";

const services = [
  {
    name: "Shared area",
    image: sharedImg,
    imageLqip: sharedImgLqip,
    alt: "Spacious shared workspace area with modern furniture and collaborative environment",
    description:
      "Open-plan workspace perfect for individuals and small teams, featuring high-speed internet and ergonomic furniture",
    priceRange: "50 EGP/day",
  },
  {
    name: "Cabin",
    image: cabinImg,
    imageLqip: cabinImgLqip,
    alt: "Private cabin workspace designed for focused work and small meetings",
    description:
      "Private enclosed workspace ideal for 2 people, offering privacy and quiet environment",
    priceRange: "50 EGP/hour",
  },
  {
    name: "Meeting room",
    image: roomImg,
    imageLqip: roomImgLqip,
    alt: "Professional meeting room equipped with modern presentation facilities",
    description:
      "Fully equipped meeting space with projector and whiteboard, perfect for team meetings and presentations",
    priceRange: "50 EGP/hour",
  },
];
---

<section id="services">
  <h2>OUR Services</h2>
  <ul>
    {
      services.map((service) => (
        <li class="benefit">
          <Picture
            formats={["avif", "webp"]}
            src={service.image}
            alt={service.alt}
            style={{
              backgroundImage: `url("${service.imageLqip.lqip}")`,
              backgroundSize: "cover",
            }}
          />
          <h3>{service.name}</h3>
        </li>
      ))
    }
  </ul>
</section>
<style>
  section {
    background: white;
    margin-inline: -2rem;
    padding: 2rem;
  }
  h2 {
    text-align: center;
    color: hsl(var(--accent));
  }
  h3 {
    color: white;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  ul {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: baseline;
  }
  li {
    position: relative;
    flex: 1;
    flex-basis: 300px;
    margin-block: 1rem;
    list-style: none;
    width: max(28vw, 100%);
    height: 200px;
  }
  img {
    border-radius: 24px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.8);
  }
</style>
