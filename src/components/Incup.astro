---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
const socialAcounts = [
  {
    name: "Insta",
    url: "https://www.instagram.com/incupcoffee._/",
    iconName: "mdi:instagram",
  },
  {
    name: "Facebook",
    url: "https://www.facebook.com/incup.coffee.co",
    iconName: "mdi:facebook",
  },
  {
    name: "menu",
    url: "https://drive.google.com/file/d/1tQbkTVMYcIr0LZTvr69pd7ilpvT5hbP5/view?usp=drive_link",
    iconName: "material-symbols:menu-book-outline",
  },
];
---

<div class="incup">
  <!-- TODO: unremove optimization -->
  <Image
    src={import("../assets/incup.png")}
    alt={"incup logo with coffe dicoration"}
  />
  <p>
    Experience the perfect blend of work and pleasure at our <storng
      class="bold"
      >October branch,
    </storng>in collaboration with InCup. With the mantra "Sip, Start, Succeed,"
    elevate your workdays with premium coffee and delightful sweets. Join us in
    creating an environment where productivity seamlessly intertwines with
    enjoyment. Welcome to a workspace designed for success!
  </p>
  <ul>
    {
      socialAcounts.map((link) => (
        <li>
          <a
            href={link.url}
            aria-label={link.name}
            target="_blank"
            rel="noopener"
          >
            <Icon name={link.iconName} color={"black"} stroke-width={2} />
          </a>
        </li>
      ))
    }
  </ul>
</div>
<style>
  .incup {
    background: #c54136;
    margin-inline: -2rem;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    align-items: center;
  }
  p {
    flex: 1;
    min-width: min(350px, 100%);
    padding: 0rem 2rem;
    text-wrap: balance;
  }
  .incup img {
    width: 100vw;
    height: auto;
  }
  /* TODO: research why strong selector is not working */
  strong,
  .bold {
    font-weight: 700;
  }
  ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    flex-wrap: wrap;
    padding: 1rem 2rem 2rem 2rem;
  }
</style>
